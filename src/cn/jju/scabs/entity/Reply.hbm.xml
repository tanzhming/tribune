<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
	
<hibernate-mapping package="cn.jju.scabs.entity">

	<class name="Reply" table="t_reply">
		<!-- 主键,映射 -->
	 	<id name="id" column="Rid">
			<generator class="native"></generator>
		</id>
		
		<property name="contents" column="Rcontents"></property>
		<property name="time" column="Rtime"></property>
		<many-to-one name="topic" column="Rtid" class="Topic" lazy="false" ></many-to-one>
		<many-to-one name="user" column="Ruid" class="User" lazy="false"></many-to-one>
		
		<many-to-one name="reply" column="RRid" class="Reply" lazy="false"></many-to-one>
		
	</class>
	
</hibernate-mapping>













